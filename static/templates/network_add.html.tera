{% extends "nav" %}

{% block network_add %}
        <!-- NETWORK ADD CREDENTIALS FORM -->
        <div class="card center">
            <!-- Standard input with button -->
            <form id="wifiCreds" class="form">
                <h1 class="bold center-text title-medium">Add WiFi Network</h1>
                <input id="ssid" name="ssid" class="center input" type="text" placeholder="SSID" title="Network name (SSID) for WiFi access point"></input>
                <input id="pass" name="pass" class="center input" type="password" placeholder="Password" title="Password for WiFi access point"></input>
                <button id="addWifi" class="center button" name="wifi">Connect</button>
                <a class="link" href="/network">
                    <button class="center button">Cancel</button>
                </a>
                <!-- NOTE : used to share ux information with the user -->
                <p class="label-small" style="padding-left: 5px;">This website will be unresponsive while the access point is disabled and the WiFi connection attempt is made.</p>
            </form>
        </div>
{% endblock %}
